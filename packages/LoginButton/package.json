{
    "name": "oreid-login-button",
    "description": "Login button for ORE ID which includes provider logos",
    "version": "1.0.2",
    "license": "MIT",
    "author": "Aikon",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build-server": "rm -rf dist/* && tsc --build tsconfig.json && npm run copy-assets",
        "build-browser": "rm -rf dist.browser/* && ./node_modules/.bin/ncc build src/index.ts -o dist.browser --minify",
        "build": "npm run build-server",
        "build-production": "npm run build && TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack",
        "clean": "rm -rf dist && rm -rf dist.browser",
        "copy-assets": "copyfiles -u 1 \"src/assets/*\" dist",
        "echo": "echo \"================== oreid-login-button ===================\"",
        "installpkg": "npm run echo && npm run",
        "prepare": "npm run build",
        "prebuild": "npm run clean",
        "watch": "./tsc -w",
        "test": "",
        "lint": "tslint -c ../../tslint.json -p ./tsconfig.json"
    },
    "devDependencies": {
        "@types/node": "^14.11.1",
        "@zeit/ncc": "^0.22.3"
    },
    "peerDependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    },
    "dependencies": {
        "typescript": "4.0.3",
        "copyfiles": "^2.4.0",
        "react": "^16.6.3",
        "react-dom": "^16.6.3"
    }
}
